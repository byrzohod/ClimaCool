{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=climacool;Username=climacool_user;Password=dev_password",
    "Redis": "localhost:6379"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "admin",
    "Password": "admin",
    "VirtualHost": "/"
  },
  "OpenSearch": {
    "Url": "http://localhost:9200",
    "DefaultIndex": "climacool-products"
  },
  "MinIO": {
    "Endpoint": "localhost:9000",
    "AccessKey": "admin",
    "SecretKey": "admin123456",
    "UseSSL": false,
    "BucketName": "climacool-assets"
  },
  "JWT": {
    "Secret": "your-256-bit-secret-key-for-development-only-change-in-production",
    "Issuer": "ClimaCool",
    "Audience": "ClimaCoolUsers",
    "ExpiryMinutes": 60
  },
  "Email": {
    "Provider": "SMTP",
    "SMTP": {
      "Host": "localhost",
      "Port": 1025,
      "Username": "",
      "Password": "",
      "EnableSSL": false,
      "FromEmail": "noreply@climacool.local",
      "FromName": "ClimaCool Dev"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:4201"
    ]
  },
  "Features": {
    "EnableRedisCache": true,
    "EnableElasticsearch": true,
    "EnableEmailNotifications": false,
    "EnablePaymentProcessing": false,
    "EnableSwagger": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}
